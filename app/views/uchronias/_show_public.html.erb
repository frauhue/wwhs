<h1>Uchronia <%= uchronia.title %></h1>

<article>
	<% if uchronia.image %>
		<%= image_tag uchronia.image.image.url(:thumb) %>
	<% end %> 
	
	<% if uchronia.media_embed %>
		<%= uchronia.media_embed.html_safe %>
	<% end %>
	
	<p>
	  <b>Point of Divergence:</b> <%= uchronia.pod %>
	</p>
	
	<p><%= uchronia.description.html_safe %></p>

<p>
	Uchronists: 
<% uchronia.uchronists.each do |u| %>
	<%= link_to u.name, "#/" + u.slug %>
<% end %>
</p>

