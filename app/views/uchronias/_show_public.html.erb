<h1>Uchronia <%= uchronia.title %></h1>

<article>
	<% if uchronia.image %>
		<%= image_tag uchronia.image.image.url(:thumb) %>
	<% else %> 
		<%= image_tag "http://wwhs-production.s3.amazonaws.com/images/16/medium/image.jpg?1382099134" %>
	<% end %>
	
	<% if uchronia.media_embed %>
		<%= uchronia.media_embed.html_safe %>
	<% end %>
	
	<p>
	  <b>Point of Divergence:</b> <%= uchronia.pod %>
	</p>
	
	<p><%= uchronia.description.html_safe %></p>

<p>
	Uchronists: 
<% uchronia.uchronists.each do |u| %>
	<%= link_to u.name, "#/" + u.slug %>
<% end %>
</p>

<p>Weitere Uchronien: 

<% Uchronia.all.each do |u| %>
	<% unless u.id == uchronia.id %>
		<%= link_to u.title, "#/" + u.slug, {:class=>"uchronia_link", :rel=>u.slug} %>
	<% end %>
<% end %>

<br/>
	<%#= link_to "vorherige", "#/" + uchronia.previous_uchronia.slug %>
	<%#= link_to "nächste", "#/" + uchronia.next_uchronia.slug %>
</p>

</article>

<aside class="post-it bio_translation">
	<div class="bio_translation_content"></div>
	<%= link_to "Biographie ändern", "#/biographygenerator", {:class=>"uchronia_link", :rel=>uchronia.slug} %>
</aside>