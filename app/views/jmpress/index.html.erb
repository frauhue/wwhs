<div id="canvas">
	<div id="overview" class="step" data-x="3000" data-y="1500" data-scale="10">
    </div>
	<% x = 2000 %>
	<% Page.all.each do |page| %>
		<div id="<%= page.slug %>" class="step" data-x="<%= x %>" data-y="<%= rand(3000)%>" data-rotate="<%= rand(360)%>" data-src="<%= url_for controller: 'pages', action: 'show', id: page %>"></div>
	<% x += 1000 %>
	<% end %>
</div>

<div class="hint">
    <p>Use arrow keys to navigate</p>
</div>

<script type="text/javascript">
$(function() {
	$('#canvas').jmpress();
	
});
</script>
