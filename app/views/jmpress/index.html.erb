		} 
	%>	

	<%= render :partial => 'pages/show_on_canvas', :locals => {
		:page => Page.find('regeln'),
		:x => 520,
		:y => -250,
		} 
	%>
	<% xindex = 0 %>
	<% yindex = 1 %>
	<% Uchronist.all.each_with_index do |uchronist, index| %>
		<% yindex = ( xindex == 5 ? yindex+1 : yindex) %>
		<% xindex = ( xindex == 5 ? 1 : xindex+1) %>
		<div id="<%= uchronist.slug %>" class="step uchronist" data-x="<%=  -1000 + (300* yindex) %>" data-y="<%= 1000 + (300 * xindex) %>" data-rotate="<%= 90 %>" data-scale="0.5">
		<%= render :partial => 'uchronists/show_public', :locals => {:uchronist => uchronist} %>
		</div>
	<% end %>

	<div id="biographygenerator" class="step" data-x="30" data-y="490">	
		<%= render 'user_biographies/form_public' %>
	</div>
	
	<% x = 0 %>
	<% rand_phi = (0..36).to_a.sort{ rand() - 0.5 }[0..Uchronia.all.count] %>
	<% Uchronia.all.each_with_index do |uchronia, index| %>
			<div class="step uchronia" data-r="<%= 2000 %>" data-phi="<%= 10*rand_phi[index] %>" data-rotate="<%= rand(100)-5%>">
			<%= render :partial => 'uchronias/show_public', :locals => {:uchronia => uchronia} %>
			</div>
			<% x += 700 %>
	<% end %>



</div>

<div class="hint">
    <p>Use arrow keys to navigate</p>
</div>

